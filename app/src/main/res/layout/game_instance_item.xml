<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_item_vertical_space"
    android:layout_marginBottom="@dimen/list_item_vertical_space"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height">

        <TextView
            android:id="@+id/game_instance_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_leading_space"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/game_instance_item_launch_ib"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Placeholder Text"/>

        <ImageButton
            android:id="@+id/game_instance_item_launch_ib"
            style="@style/AppTheme.ImageButton"
            android:layout_marginEnd="4dp"
            android:contentDescription="@null"
            android:src="@drawable/mt_icon_play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/game_instance_item_settings_ib"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/game_instance_item_settings_ib"
            style="@style/AppTheme.ImageButton"
            android:layout_marginEnd="@dimen/list_item_trailing_space"
            android:contentDescription="@null"
            android:src="@drawable/mt_icon_settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>